@model HeartInsurance.Web.ViewModels.SignUpViewModel

@{
    ViewData["Title"] = "Sign up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="FullSize">
    <div class="container h-100 card col-md-8">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-md-5">
                <div class="pb-4 sign-up-title"><h2>Sign Up</h2></div>
                <div class="pb-4">
                    <h6>
                        Please sign up with your real name and email.
                        Once you entered it, yo will not be able to change it later.
                        <strong>
                            A password will be sent to your email, so please make
                            sure it is correct.
                        </strong>
                    </h6>
                </div>
                <form asp-action="SignUp" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control input_control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Name" class="form-control input_control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Sign Up" class="btn btn-primary rounded btn-block" />
                    </div>
                    <div class="form-group">
                        @if (ViewBag.Message != null)
                        {
                            <div class="text-danger">@ViewBag.Message</div>
                        }
                    </div>
                </form>
            </div>
            <div class="col-md-5">
                <img src="~/assets/images/Signup_img.PNG" style="width:100%" />
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
