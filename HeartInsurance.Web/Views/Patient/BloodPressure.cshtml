@model HeartInsurance.Web.ViewModels.BloodPressureViewModel

@{
    ViewData["Title"] = "Patient Blood Pressure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="FullSize" style="height:auto">
    <div class="container h-100 card col-md-8">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12">
                <div class="pb-2 sign-up-title"><h2>Week Blood Pressure</h2></div>
                <div class="patient-blood-pressure-head-container">
                    <div class="patient-profile">
                        <span class="profile-photo"></span>
                        <div class="profile-row">
                            <h3 class="patient-name">
                                Robert Downey Jr.
                            </h3>
                            <div class="period-metrics">
                                <button class="period-metrics-btn">
                                    Last 7 Days
                                </button>
                                <button class="period-metrics-btn">
                                    Month
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="patient-heart-metrics">
                        <div class="weight-info-container">
                            <h4>
                                Weight
                            </h4>
                            <div class="weight-info-box">
                                <div class="weight">
                                    <p>
                                        158.7<span>lb</span>
                                    </p>
                                    <span class="last-week-weight">
                                        <span>
                                            160.9
                                        </span>
                                        <span>
                                            lb last week
                                        </span>
                                    </span>
                                </div>
                                <span class="weight-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-arrow-down" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z" />
                                    </svg>
                                </span>
                            </div>
                        </div>
                        <div class="heart-info-container">
                            <h4>
                                Heart Rate
                            </h4>
                            <div class="heart">
                                <div class="heart-bpm-container">
                                    <span class="heart-bpm">
                                        120 <span>bpm</span>
                                    </span>
                                </div>
                                <span class="heart-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                    </svg>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="metrics-container">
                    <span>
                        <canvas class="patient-week-blood-pressure"></canvas>
                    </span>
                    <span>
                        <canvas class="patient-week-glucose"></canvas>
                    </span>
                    <div class="patient-weight">

                    </div>
                    <div class="patient-heart-hate">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/lib/chart-js/dist/chart-js.js"></script>

<script>
    var bloodPressureContext = document.getElementsByClassName("patient-week-blood-pressure");
    var glucoseContext = document.getElementsByClassName("patient-week-glucose");

    new Chart(bloodPressureContext, {
        type: 'line',
        data: {
            labels: [16, 17, 18, 19, 20, 21, 22],
            datasets: [
                {
                    label: "Systolic",
                    data: [120, 130, 130, 120, 110, 120, 130],
                    borderWidth: 6,
                    borderColor: 'rgba(0, 179, 190, 0.85)',
                    backgroundColor: 'transparent',
                    tension: 0.3
                },
                {
                    label: "Diastolic",
                    data: [80, 90, 80, 90, 90, 90, 80],
                    borderWidth: 6,
                    borderColor: 'rgba(66, 207, 0, 0.85)',
                    backgroundColor: 'transparent',
                    tension: 0.3
                },
            ]
        },
        options: {
            plugins: {
                title: {
                    display: true,
                    fontSize: 30,
                    text: "Blood Pressure",
                },
                labels: {
                    fontStyle: "bold"
                }
            }
        }
    });

    new Chart(glucoseContext, {
        type: 'bar',
        data: {
            labels: [16, 17, 18, 19, 20, 21, 22],
            datasets: [
                {
                    label: "Glucose Level",
                    data: [87, 90, 82, 85, 85, 82, 85],
                    borderWidth: 3,
                    borderColor: 'rgba(0, 179, 190, 1)',
                    backgroundColor: 'rgba(0, 179, 190, 0.85)'
                },
            ]
        },
        options: {
            plugins: {
                title: {
                    display: true,
                    fontSize: 30,
                    text: "Glucose",
                },
                labels: {
                    fontStyle: "bold"
                }
            }
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}