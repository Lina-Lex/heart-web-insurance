@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Users details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-6 pt-5">
                <div class="text-center">
                    <img class="img-thumbnail rounded-circle" style="height:100px; width:100px" />
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="p-5">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>DOB</label>
                        <div class="row">
                            <div class="col-md-4">
                                <select class="form-control" readonly>
                                    <option value="Day"></option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-control" readonly>
                                    <option value="Month"></option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-control" readonly>
                                    <option value="Year"></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <div class="row">
                            <div class="col-md-2">
                                <select class="form-control" readonly>
                                    <option value="Month"></option>
                                </select>
                            </div>
                            <div class="col-md-10">
                                <input type="text" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-5">
                    <div class="form-group">
                        <label>Client Insurnace ID</label>
                        <input type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>Insurnace Plan</label>
                        <input type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>Tenure Period</label>
                        <input type="text" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Issued Date</label>
                                <input type="date" class="form-control" readonly>
                            </div>
                            <div class="col-md-6">
                                <label>Expiratio Date</label>
                                <input type="date" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <input type="submit" id="BtnEdit" value="Edit" class="form-control col-md-6 btn btn-outline-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>