@model HeartInsurance.Web.ViewModels.EmailConfirmationViewModel

@{
    ViewData["Title"] = "Confirm your email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="FullSize">
    <div class="container h-100 card col-md-8">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-md-5">
                <div class="pb-4 sign-up-title"><h2>Email confirmation</h2></div>
                <div class="pb-4">
                    <h6>
                        <strong>
                            Enter the token sent to your email, to confirm your email address
                        </strong>
                    </h6>
                </div>
                <form asp-action="ConfirmEmail" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control input_control" value="@TempData["User-Email"]" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Token" class="form-control input_control" type="hidden" value="@TempData["User-Token"]" />
                        <span asp-validation-for="Token" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Confirm Email" class="btn btn-primary rounded btn-block" />
                    </div>
                    <div class="form-group">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success">@ViewBag.Message</div>
                        }
                        else
                        {
                            <div class="text-danger">@ViewBag.Message</div>
                        }
                    </div>
                </form>
            </div>
            <div class="col-md-5">
                <img src="~/assets/images/Signup_img.PNG" style="width:100%" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
