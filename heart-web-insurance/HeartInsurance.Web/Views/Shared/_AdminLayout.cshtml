<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewData["Title"] - Heart Insurance</title>
    <link rel="icon" href="~/logo/favicon.ico" type="image/x-icon">
    <link rel="icon" type="image/png" href="~/logo/favicon-16x16.png" sizes=16x16>
    <link rel="icon" type="image/png" href="~/logo/favicon-32x32.png" sizes=32x32>
    <link rel="icon" type="image/png" href="~/logo/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="~/logo/android-chrome-512x512.png" sizes=512x512>
    <link rel="icon" type="image/png" href="~/logo/android-chrome-192x192.png" sizes=169x192>
    <link href="~/dist/css/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/dist/css/overlayScrollbars/css/OverlayScrollbars.min.css" rel="stylesheet" />
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Profile Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" asp-controller="Home" asp-action="Index" asp-area="Admin">
                        <img src="~/assets/images/health.jpg" class="rounded-circle" style="width:35px; height:35px" />
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <span class="dropdown-item dropdown-header">Heart Insurance Profile</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            Placeholder - #1 (Todo)
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            Placeholder - #2 (Todo)
                        </a>
                    </div>
                </li>
            </ul>
        </nav>
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-controller="Home" asp-action="Index" asp-area="Admin" class="brand-link">
                <img src="~/assets/images/health.jpg" style="width:100%; height:100px" />
            </a>
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex"></div>
                <!-- Sidebar Menu -->
                <nav class="mt-lg-5">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" asp-area="Admin" class="nav-link">
                                <i class="nav-icon fas fa-home"></i>
                                <p>Home</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Users" asp-area="Admin" class="nav-link">
                                <i class="nav-icon far fa-user text-info"></i>
                                <p>Users</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" asp-area="Patient" class="nav-link">
                                <i class="nav-icon fas fa-heartbeat text-info"></i>
                                <p>Patients</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content pt-2">
                <div class="container-fluid">
                    <!-- Content holder or wrapper-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card p-3">
                                <main role="main">
                                    @RenderBody()
                                </main>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer text-center">
            <strong>All rights reserved | Copyright &copy; @DateTime.Now.ToString("yyyy") - Heart Insurance</strong>
        </footer>
    </div>


    <script src="~/dist/jquery/jquery.min.js"></script>
    <script src="~/dist/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/dist/css/overlayScrollbars/js/OverlayScrollbars.min.js"></script>
    <script src="~/dist/js/adminlte.js"></script>
    <script src="~/dist/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="~/dist/raphael/raphael.min.js"></script>
    <script src="~/dist/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="~/js/site.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.25/b-1.7.1/fc-3.3.3/sc-2.0.4/sb-1.1.0/sp-1.3.0/sl-1.3.3/datatables.min.js"></script>
    @RenderSection("Scripts", required: false);
</body>
</html>

