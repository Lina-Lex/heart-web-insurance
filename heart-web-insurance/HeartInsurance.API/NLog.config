<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="${currentdir}/Logs/Heart Web Insurance.internalLog.log">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<!-- write logs to file  -->
		<target
			xsi:type="File"
			name="logFile"
			fileName="${currentdir}/Logs/Heart Web Insurance.${shortdate}.${lowercase:${level}}.log"
			layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}"
			archiveFileName="${currentdir}/Logs/archive/Heart Web Insurance.{#}.${lowercase:${level}}.gz"
			archiveEvery="Day"
			maxArchiveFiles="30"
			archiveNumbering="DateAndSequence"
			archiveAboveSize="5000000"
			archiveDateFormat="yyyy-MM-dd"
			keepFileOpen="false"/>
		
		<target xsi:type="EventLog"
            name="eventlog"
            source="${Heart Web Insurance}"
            layout="${message}${newline}${exception:format=ToString}"/>
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" writeTo="logFile" minlevel="Info" />
		<logger name="*" writeTo="logFile" minlevel="Error" />
		<logger name="*" writeTo="eventLog" minlevel="Debug" />
	</rules>
</nlog>